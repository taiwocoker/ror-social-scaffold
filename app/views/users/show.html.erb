<section class="user-section">
  <div class="profile-name">
    <div class="profile">
      <%= gravatar_for current_user, size: 100 %> 
        <h2><%= "#{@user.name}" %></h2>
    </div>
    <div>
      <%= render 'users/form' %>
    </div>
  </div>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>

